int drawBoard(int choice2, int symbol)
{
    printf("\tTick Tack Toe\n   Player 1 (X)\tPlayer 2 (0)\n\n\t");
    char xoRay[9] ={'1','2','3','4','5','6','7','8','9'};
    
    if(choice2 != 69)
    {
        if(symbol==0)
        char xoRay[choice2] = 'X'
        

    }
    
    for(int k =0;k<3;++k)
        printf("  %c",xoRay[k]);
    printf("\n\t");
    for(int k =3;k<6;++k)
            printf("  %c",xoRay[k]);
    printf("\n\t");
    for(int k =6;k<9;++k)
            printf("  %c",xoRay[k]);

    return 0;      
}

