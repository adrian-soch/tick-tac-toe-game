#include <stdio.h>

int getChoice(int count){
    int turn;
    if(count%2 == 0)
        turn = 1;
    else
        turn = 2;
    int choice;
    printf("Player %i, Choose a space: ",turn);
    scanf("%i", &choice);
    return(choice);
}

